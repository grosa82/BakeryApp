<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >

            <stroke
                android:height="3dp"
                android:width="3dp"
                android:color="#FFFFFF" />

            <solid android:color="#d9534f" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <corners
                android:radius="3dp" />
        </shape>
    </item>
</layer-list>