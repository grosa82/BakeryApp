<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs246.bakery.myapplication" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="18" />
    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE" />

    <permission
        android:name="com.example.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.google.android.gcm.demo.app" />
            </intent-filter>
        </receiver>

        <service android:name=".GcmIntentService" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".UserForm"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_user_form" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".account_summary"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_account_summary" >
        </activity>
        <activity
            android:name=".chooseOrder"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_choose_order" >
        </activity>
        <activity
            android:name=".login"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".user_login"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_user_login" >
        </activity>
        <activity
            android:name=".loginStage"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_login_stage" >
        </activity>
        <activity
            android:name=".signOn"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_sign_on" >
        </activity>
        <activity
            android:name=".orderCatagory"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_order_catagory" >
        </activity>
        <activity
            android:name=".orderTemplates"
            android:screenOrientation="portrait"

            android:label="@string/title_activity_order_templates" >
        </activity>
        <activity
            android:name=".uploadPicture"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_upload_picture" >
        </activity>
        <activity
            android:name=".customizeCake"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_customize_cake" >
        </activity>
        <activity
            android:name=".OrderedCake"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_ordered_cake" >
        </activity>
    </application>

</manifest>
